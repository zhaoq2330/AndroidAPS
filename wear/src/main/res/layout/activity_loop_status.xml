<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/black">

    <!-- Loading State -->
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <!-- Error State -->
    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/loopDisabled"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- Content -->
    <ScrollView
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:boxedEdges="all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Header -->
            <include layout="@layout/loop_status_header" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- Targets Card -->
            <include
                android:id="@+id/targets_card"
                layout="@layout/loop_status_targets" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- Loop Info Card -->
            <include
                android:id="@+id/loop_info_card"
                layout="@layout/loop_status_loop_info" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- OAPS Card -->
            <include
                android:id="@+id/oaps_card"
                layout="@layout/loop_status_oaps" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.wear.widget.BoxInsetLayout>