<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <!-- Loading State -->
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <!-- Error State -->
    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@color/loopDisabled"
        android:textSize="13sp"
        android:visibility="gone" />

    <!-- Content -->
    <ScrollView
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="18dp"
            android:paddingBottom="38dp">

            <!-- Header -->
            <include layout="@layout/loop_status_header" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <!-- Loop Info Card - FÃ˜RST -->
            <include
                android:id="@+id/loop_info_card"
                layout="@layout/loop_status_loop_info" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <!-- OAPS Card - ANDRE -->
            <include
                android:id="@+id/oaps_card"
                layout="@layout/loop_status_oaps" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <!-- Targets Card - SIST -->
            <include
                android:id="@+id/targets_card"
                layout="@layout/loop_status_targets" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>