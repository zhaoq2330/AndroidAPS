<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/loop_status_card_background"
    android:padding="10dp">

    <!-- Card Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:background="@color/loopClosed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Loop Activity"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/loopClosed" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <!-- Last Run -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last Run"
            android:textSize="11sp"
            android:textColor="@color/white_70percent" />

        <TextView
            android:id="@+id/last_run_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/loopClosed"
            android:text="14:25" />

    </LinearLayout>

    <!-- Last Enact -->
    <LinearLayout
        android:id="@+id/last_enact_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last Enact"
            android:textSize="11sp"
            android:textColor="@color/white_70percent" />

        <TextView
            android:id="@+id/last_enact_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/loopClosed"
            android:text="14:25" />

    </LinearLayout>

</LinearLayout>